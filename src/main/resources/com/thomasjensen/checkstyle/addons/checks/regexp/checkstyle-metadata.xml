<!DOCTYPE checkstyle-metadata PUBLIC "-//eclipse-cs//DTD Check Metadata 1.1//EN"
        "http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">

<checkstyle-metadata>
<rule-group-metadata name="Checkstyle Addons" priority="1600">

    <rule-metadata name="RegexpOnFilename" internal-name="RegexpOnFilename" parent="Checker">
        <alternative-name
            internal-name="com.thomasjensen.checkstyle.addons.checks.regexp.RegexpOnFilenameCheck"/>
        <description>Checks the names of files (Java and non-Java) against a regular expression.</description>

        <property-metadata name="selection" datatype="Regex">
            <description>Only files which match this expression in addition to the file extensions will be checked. Leave blank for unrestricted.</description>
        </property-metadata>
        <property-metadata name="regexp" datatype="Regex" default-value="^(?:\s+.*|.*?\s+)$">
            <description>The regular expression to apply to the selected file names.</description>
        </property-metadata>
        <property-metadata name="mode" datatype="SingleSelect" default-value="illegal">
            <description>Determines if the regular expression must or must not match.</description>
            <enumeration>
                <property-value-option value="illegal"/>
                <property-value-option value="required"/>
            </enumeration>
        </property-metadata>
        <property-metadata name="simple" datatype="Boolean" default-value="true">
            <description>Check the simple file name only (checked), or the entire path (unchecked).</description>
        </property-metadata>

        <message-key key="regexp.filepath.illegal"/>
        <message-key key="regexp.filepath.required"/>
    </rule-metadata>

</rule-group-metadata>
</checkstyle-metadata>
