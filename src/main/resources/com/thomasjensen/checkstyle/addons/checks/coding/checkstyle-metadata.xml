<!DOCTYPE checkstyle-metadata PUBLIC "-//eclipse-cs//DTD Check Metadata 1.1//EN"
        "http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">

<checkstyle-metadata>
<rule-group-metadata name="Checkstyle Addons" priority="1600">

    <rule-metadata name="LostInstance" internal-name="LostInstance" parent="TreeWalker">
        <alternative-name internal-name="com.thomasjensen.checkstyle.addons.checks.coding.LostInstanceCheck"/>
        <description>Checks that object instances created explicitly with &quot;new&quot; are actually used for
            something. Just being assigned to a variable or passed as a parameter is enough. A full data flow analysis
            is not performed.</description>
        <message-key key="lost.instance"/>
    </rule-metadata>

</rule-group-metadata>
</checkstyle-metadata>
